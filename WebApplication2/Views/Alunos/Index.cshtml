@{
    ViewData["Title"] = "Alunos";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success col-4">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger col-4">
        @TempData["MensagemErro"]
    </div>
}

@model List<AlunoModel>

<h1>Dados dos Alunos</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Contato</th>
            <th scope="col">E-mail</th>
            <th scope="col">CEP</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (AlunoModel aluno in Model)
            {
                <tr>
                    <th scope="row">@aluno.Id</th>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Idade</td>
                    <td>@aluno.Contato</td>
                    <td>@aluno.Email</td>
                    <td>@aluno.Cep</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-primary" asp-action="BuscarEndereco" asp-route-cep="@aluno.Cep">Endereço</a>
                        </div>
                    </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.Id" class="btn btn-secondary">Editar</a>
                        </div>
                    </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a asp-controller="Alunos" asp-action="RemoverAluno" asp-route-id="@aluno.Id" class="btn btn-danger">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a asp-controller="Alunos" asp-action="Adicionar" type="button" class="btn btn-primary">Adicionar novo Aluno</a>
</div>